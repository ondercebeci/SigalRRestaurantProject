		<script type="text/javascript">
			$(document).ready(()=>{
					var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7242/SignalRHub").build();
					$("#connstatus").text(connection.state);

					connection.start().then(()=>{
						$("#connstatus").text(connection.state);
						setInterval(() =>{
						connection.invoke("SendProgress");
						},1000);

					}).catch((err)=>{console.log(err)});

			connection.on("ReceiveTotalMoneyCaseAmount",(value)=>{
				$("#TotalMoneyCaseAmount").text(value);
				});

				connection.on("ReceiveMenuTableCount",(value2)=>{
				$("#MenuTableCount").text(value2);
				});

				connection.on("ReceiveActiveOrderCount",(value3)=>{
				$("#ActiveOrderCount").text(value3);
				});

				connection.on("ReceiveMenuTableCount",(value4)=>{
				$("#totalMenuTableCountProgress").empty();
