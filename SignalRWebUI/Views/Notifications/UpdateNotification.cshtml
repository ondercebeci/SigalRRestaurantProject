@model UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<input type="hidden" asp-for="NotificationID" />
						<div class="card-header">
							<div class="card-title"> Bildirim İşlemleri</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="CategoryName">Bildirim  Türü</label>
								<input type="text" class="form-control" asp-for="Type" id="CategoryName">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="CategoryName">Bildirim  İkonu</label>
								<input type="text" class="form-control" asp-for="Icon" id="CategoryName">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="CategoryName">Açıklama</label>
								<input type="text" class="form-control" asp-for="Description" id="CategoryName">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-outline-primary">Bildirimi Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>





