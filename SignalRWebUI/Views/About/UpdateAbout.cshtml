@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title"> Hakkımızda Yazı Güncelleme Sayfası</div>
						   
						    <input type="hidden" asp-for="AboutID" />
						        <div class="card-body">
							      <div class="form-group">
								  <label for="title">Başlığı Giriniz</label>
								   <input type="text" class="form-control" asp-for="Title" id="title">
							       </div>
						       </div>
							   <div class="card-body">
								<div class="form-group">
									<label for="ImageUrl">Görselin Url'ini Giriniz</label>
									<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
								</div>
						    </div>
								<div class="card-body">
									<div class="form-group">
										<label for="Descripion">Açıklamayı Giriniz</label>
										<textarea rows="5" class="form-control" asp-for="Descripion" id="Descripion"></textarea>
									</div>

								</div>
								<div class="card-action">
									<button class="btn btn-outline-primary">Hakkımda Yazısını Güncelle</button>
								</div>
					   </div>
				</form>
			</div>

		</div>
	</div>
</div>



